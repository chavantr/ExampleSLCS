<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CarDetailsActivity">


    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/lblLock"
              android:text="@string/car_lock" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tglLock"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
              android:padding="15dp"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:gravity="center_vertical"
              android:layout_marginStart="16dp" android:layout_marginEnd="8dp"/>


    <ToggleButton android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/tglLock"
                  app:layout_constraintStart_toEndOf="@+id/lblLock" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="24dp" android:layout_marginStart="8dp" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/lblLP"
              app:layout_constraintTop_toBottomOf="@id/lblLock" android:layout_marginTop="24dp"
              android:padding="15dp"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:gravity="center_vertical"
              android:text="@string/app_name"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


</android.support.constraint.ConstraintLayout>